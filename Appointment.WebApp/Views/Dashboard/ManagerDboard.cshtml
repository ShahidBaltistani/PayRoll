@model VUPayRoll.ViewModel.DashboardViewModel
@{
    ViewBag.Title = "ManagerDashboard";

    var day = DateTime.Now.Day;
    var month = DateTime.Now.Month;

    var Title="";
    var Body = "";
    if (Model.Announcements.Count() == 0)
    {
        Title = "";
        Body = "";
    }
    else
    {
        Title = Model.Announcements.FirstOrDefault().Title;
        Body = Model.Announcements.FirstOrDefault().Body;
    }

}
<link href="~/Content/Pagination/simplePagination.css" rel="stylesheet" />
<script src="~/Content/Pagination/jquery.simplePagination.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>

<script type="text/javascript">
    jQuery(function ($) {
        var items = $("#content #myTable #contentrow");
        var numItems = items.length;
        var perPage = 2;
        items.slice(perPage).hide();
        $("#pagination").pagination({
            items: numItems,
            itemsOnPage: perPage,
            prevText: '<',
            nextText: '>',
            cssStyle: "light-theme",
            onPageClick: function (pageNumber) {
                var showFrom = perPage * (pageNumber - 1);
                var showTo = showFrom + perPage;
                items.hide()
                    .slice(showFrom, showTo).show();
            }
        });
    });
</script>
