@model IEnumerable<VUPayRoll.ViewModel.TeamViewModel>
@{
    ViewBag.Title = "TeamList";
    var test = 0;
}
    <div class="content-inner compact">
        <div class="container-fluid">
            <div class="row flex-row">
                <div class="col-xl-12">
                    <div class="widget has-shadow">
                        <div class="widget-body">
                            <a type="button" class="btn btn-info" href="/Team/Create_Team" style="margin-left:5px;">New Team</a><br /><br />
                            <table class="table table-hover table-bordered mb-2" id="content">
                                <thead>
                                    <tr>
                                        <th>
                                            Team's
                                        </th>
                                    </tr>
                                </thead>
                                <tbody id="myTable">
                                    @if (Model.Count() == 0)
                                    {
                                        <tr style="border:none">
                                            <td class="text-center bold" style="font-size:12px;">
                                                No Data...
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        foreach (var item in Model)
                                        {
                                            if (test != item.ManagerId)
                                            {
                                                <tr>
                                                    <td style="text-align:center;height:30px;line-height:30px;font-size:15px;font-weight:600">
                                                        <b>
                                                            <a href="@Url.Action("GetEmpDetail","EmployeeInfo",new { id = item.ManagerId})">
                                                                @item.Manager.FirstName @item.Manager.LastName
                                                            </a>
                                                        </b>
                                                    </td>
                                                </tr>
                                                test = item.ManagerId;
                                            }

                                            <tr>
                                                <td>
                                                    <a href="@Url.Action("GetEmpDetail","EmployeeInfo",new { id = item.EmployeeId})">
                                                        <span style="width:100px;">
                                                            <span class="badge-text badge-text-small bg-info">
                                                                @item.Employee.FirstName.ToUpper()&nbsp;@item.Employee.LastName.ToUpper()
                                                            </span>
                                                        </span>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
