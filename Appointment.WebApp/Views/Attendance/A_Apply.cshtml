@{
        ViewBag.Title = "A_Apply";
}
<div class="content-inner compact">
    <div class="container-fluid">
        <div class="row flex-row">
            <div class="col-xl-12">
                <div class="widget has-shadow">
                    <div class="widget-header bordered no-actions d-flex align-items-center">
                        <h4>Attendance Management</h4>
                    </div>
                    <div class="widget-body">
                        <form autocomplete="off" id="clear" method="post" action="A_Apply">
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <label>Attendance Type</label>
                                                <select class="form-control selectpicker show-menu-arrow" id="AttendanceType" name="AttentanceType" required data-live-search="true">
                                                    <option value="" selected disabled>--Select Attendance Type--</option>
                                                    @foreach (var item in ViewBag.At)
                                                    {
                                                        <option value="@item.Id">@item.Name</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <label>InDate</label>
                                                <input type="date" class="form-control clear" id="InDate" name="InDate" required />
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <label>InTime</label>
                                                <input type="time" class="form-control clear" id="InTime" name="InTime" required />
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <label>OutTime</label>
                                                <input type="time" class="form-control clear" id="OutTime" name="OutTime"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label>Remarks</label>
                                                <textarea rows="1" placeholder="Remarks" type="text" class="form-control clear" id="Remarks" name="Remarks" required></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="em-separator separator-dashed"></div>
                            <div class="text-right">
                                <button class="btn btn-gradient-01" type="submit">Next </button>
                                <button class="btn btn-shadow" onclick="window.location.href='/Dashboard/Dboard'">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

