@{
    ViewBag.Title = "Announce_Create";
}
    <div class="content-inner compact">
        <div class="container-fluid">
            <div class="row flex-row">
                <div class="col-xl-12">
                    <div class="widget has-shadow">
                        <div class="widget-header bordered no-actions d-flex align-items-center">
                            <h4>Announcement Management</h4>
                        </div>
                        <div class="widget-body">
                            <form autocomplete="off" method="post" action="Announce_Create">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="row">
                                            <div class="col-sm-4">
                                                <div class="form-group">
                                                    <label>Title</label>
                                                    <input size="50" placeholder="Title" type="text" class="form-control" id="Title" name="Title" required />
                                                </div>
                                            </div>
                                            <div class="col-sm-8">
                                                <div class="form-group">
                                                    <label>Body</label>
                                                    <textarea rows="1" placeholder="Body" type="text" class="form-control" id="Body" name="Body" required></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="em-separator separator-dashed"></div>
                                        <div class="text-right">
                                            <button class="btn btn-gradient-01" type="submit">Next </button>
                                            <button class="btn btn-shadow" onclick="window.location.href='/Announcement/Announces/'">Cancel</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
